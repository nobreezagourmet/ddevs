<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Painel Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        .glass {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
    </style>
</head>
<body class="min-h-screen p-4">
    <div class="max-w-7xl mx-auto">
        <!-- Header -->
        <header class="glass rounded-2xl shadow-xl p-6 mb-6">
            <div class="flex justify-between items-center">
                <div class="flex items-center space-x-4">
                    <div class="w-12 h-12 bg-white rounded-full flex items-center justify-center">
                        <i class="fas fa-crown text-purple-600 text-xl"></i>
                    </div>
                    <div>
                        <h1 class="text-2xl font-bold text-white">Painel Administrativo</h1>
                        <p class="text-white/80">Sistema de GestÃ£o de Rifas</p>
                    </div>
                </div>
                <div class="flex items-center space-x-4">
                    <div class="text-right">
                        <p class="text-white/80 text-sm">Bem-vindo,</p>
                        <p class="text-white font-semibold" id="userName">Administrador</p>
                    </div>
                    <button onclick="logout()" 
                            class="bg-red-500/20 hover:bg-red-500/30 text-red-200 px-4 py-2 rounded-lg transition-colors">
                        <i class="fas fa-sign-out-alt mr-2"></i>Sair
                    </button>
                </div>
            </div>
        </header>

        <!-- Login Section -->
        <div id="loginSection" class="glass rounded-2xl shadow-xl p-8">
            <div class="max-w-md mx-auto">
                <div class="text-center mb-8">
                    <div class="w-20 h-20 bg-white rounded-full flex items-center justify-center mx-auto mb-4">
                        <i class="fas fa-lock text-purple-600 text-3xl"></i>
                    </div>
                    <h2 class="text-2xl font-bold text-white mb-2">Acesso Administrativo</h2>
                    <p class="text-white/80">Digite suas credenciais para acessar o painel</p>
                </div>
                
                <form id="loginForm" class="space-y-6">
                    <div>
                        <label class="block text-white/80 text-sm font-medium mb-2">Email</label>
                        <input type="email" id="email" required
                               class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-lg text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent"
                               placeholder="admin@rifa.com">
                    </div>
                    
                    <div>
                        <label class="block text-white/80 text-sm font-medium mb-2">Senha</label>
                        <input type="password" id="password" required
                               class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-lg text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent"
                               placeholder="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢">
                    </div>
                    
                    <button type="submit" 
                            class="w-full bg-purple-600 hover:bg-purple-700 text-white font-semibold py-3 px-4 rounded-lg transition-colors">
                        <i class="fas fa-sign-in-alt mr-2"></i>Entrar
                    </button>
                </form>
                
                <div id="loginStatus" class="mt-4"></div>
            </div>
        </div>

        <!-- Admin Panel (hidden initially) -->
        <div id="adminPanel" class="hidden">
            <!-- Dashboard Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-6">
                <!-- Stats Cards -->
                <div class="glass rounded-2xl p-6">
                    <div class="flex items-center justify-between mb-4">
                        <div class="w-12 h-12 bg-green-500/20 rounded-lg flex items-center justify-center">
                            <i class="fas fa-ticket-alt text-green-400 text-xl"></i>
                        </div>
                        <span class="text-green-400 text-sm font-medium">+12.5%</span>
                    </div>
                    <h3 class="text-white text-2xl font-bold mb-1" id="totalQuotas">0</h3>
                    <p class="text-white/80 text-sm">Total de Cotas</p>
                </div>

                <div class="glass rounded-2xl p-6">
                    <div class="flex items-center justify-between mb-4">
                        <div class="w-12 h-12 bg-blue-500/20 rounded-lg flex items-center justify-center">
                            <i class="fas fa-users text-blue-400 text-xl"></i>
                        </div>
                        <span class="text-blue-400 text-sm font-medium">+8.2%</span>
                    </div>
                    <h3 class="text-white text-2xl font-bold mb-1" id="totalUsers">0</h3>
                    <p class="text-white/80 text-sm">UsuÃ¡rios Cadastrados</p>
                </div>

                <div class="glass rounded-2xl p-6">
                    <div class="flex items-center justify-between mb-4">
                        <div class="w-12 h-12 bg-purple-500/20 rounded-lg flex items-center justify-center">
                            <i class="fas fa-gift text-purple-400 text-xl"></i>
                        </div>
                        <span class="text-purple-400 text-sm font-medium">+5.7%</span>
                    </div>
                    <h3 class="text-white text-2xl font-bold mb-1" id="activeRaffles">0</h3>
                    <p class="text-white/80 text-sm">Rifas Ativas</p>
                </div>
            </div>

            <!-- Actions -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                <!-- Create Raffle -->
                <div class="glass rounded-2xl p-6">
                    <h2 class="text-xl font-bold text-white mb-4 flex items-center">
                        <i class="fas fa-plus-circle mr-2"></i>
                        Criar Nova Rifa
                    </h2>
                    <form id="createRaffleForm" class="space-y-4">
                        <div>
                            <label class="block text-white/80 text-sm font-medium mb-2">TÃ­tulo</label>
                            <input type="text" id="raffleTitle" required
                                   class="w-full px-4 py-2 bg-white/10 border border-white/20 rounded-lg text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-purple-500"
                                   placeholder="Nome da rifa">
                        </div>
                        <div>
                            <label class="block text-white/80 text-sm font-medium mb-2">PreÃ§o por Cota (R$)</label>
                            <input type="number" id="pricePerQuota" required step="0.01" min="0.01"
                                   class="w-full px-4 py-2 bg-white/10 border border-white/20 rounded-lg text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-purple-500"
                                   placeholder="10.00">
                        </div>
                        <div>
                            <label class="block text-white/80 text-sm font-medium mb-2">Total de Cotas</label>
                            <input type="number" id="totalQuotas" required min="1" max="100000"
                                   class="w-full px-4 py-2 bg-white/10 border border-white/20 rounded-lg text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-purple-500"
                                   placeholder="1000">
                        </div>
                        <button type="submit" 
                                class="w-full bg-purple-600 hover:bg-purple-700 text-white font-semibold py-2 px-4 rounded-lg transition-colors">
                            <i class="fas fa-plus mr-2"></i>Criar Rifa
                        </button>
                    </form>
                    <div id="raffleStatus" class="mt-4"></div>
                </div>

                <!-- Swap Quota -->
                <div class="glass rounded-2xl p-6">
                    <h2 class="text-xl font-bold text-white mb-4 flex items-center">
                        <i class="fas fa-exchange-alt mr-2"></i>
                        Transferir Cota
                    </h2>
                    <form id="swapQuotaForm" class="space-y-4">
                        <div>
                            <label class="block text-white/80 text-sm font-medium mb-2">ID do UsuÃ¡rio de Origem</label>
                            <input type="text" id="originUserId" required
                                   class="w-full px-4 py-2 bg-white/10 border border-white/20 rounded-lg text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-purple-500"
                                   placeholder="ID do usuÃ¡rio">
                        </div>
                        <div>
                            <label class="block text-white/80 text-sm font-medium mb-2">ID do UsuÃ¡rio de Destino</label>
                            <input type="text" id="destinationUserId" required
                                   class="w-full px-4 py-2 bg-white/10 border border-white/20 rounded-lg text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-purple-500"
                                   placeholder="ID do usuÃ¡rio">
                        </div>
                        <div>
                            <label class="block text-white/80 text-sm font-medium mb-2">ID da Rifa</label>
                            <input type="text" id="raffleId" required
                                   class="w-full px-4 py-2 bg-white/10 border border-white/20 rounded-lg text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-purple-500"
                                   placeholder="ID da rifa">
                        </div>
                        <div>
                            <label class="block text-white/80 text-sm font-medium mb-2">NÃºmero da Cota</label>
                            <input type="text" id="quotaNumber" required
                                   class="w-full px-4 py-2 bg-white/10 border border-white/20 rounded-lg text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-purple-500"
                                   placeholder="0001">
                        </div>
                        <button type="submit" 
                                class="w-full bg-purple-600 hover:bg-purple-700 text-white font-semibold py-2 px-4 rounded-lg transition-colors">
                            <i class="fas fa-exchange-alt mr-2"></i>Transferir Cota
                        </button>
                    </form>
                    <div id="swapStatus" class="mt-4"></div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // ðŸš¨ HARDCODE DE EMERGÃŠNCIA - CONEXÃƒO COM RENDER
        window.API_URL = 'https://ddevs-86w2.onrender.com';
        
        // ðŸš€ CARIMBO DE VERSÃƒO - IDENTIFICADOR NO CONSOLE
        console.log('ðŸš€ VERSÃƒO ATUALIZADA: CONEXÃƒO COM RENDER ATIVA');
        console.log('ðŸ”— API_URL FORÃ‡ADO:', window.API_URL);
        let authToken = null;
        let currentUser = null;

        // Show status message
        function showStatus(elementId, message, type) {
            const element = document.getElementById(elementId);
            element.innerHTML = `
                <div class="p-4 rounded-lg ${
                    type === 'success' ? 'bg-green-500/20 text-green-200 border border-green-500/30' : 
                    type === 'error' ? 'bg-red-500/20 text-red-200 border border-red-500/30' : 
                    'bg-blue-500/20 text-blue-200 border border-blue-500/30'
                }">
                    ${message}
                </div>
            `;
            
            if (type !== 'error') {
                setTimeout(() => {
                    element.innerHTML = '';
                }, 3000);
            }
        }

        // Login
        document.getElementById('loginForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;

            try {
                const response = await fetch(window.API_URL + '/api/auth/login', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ email, password })
                });

                const data = await response.json();

                if (data.success && data.data.isAdmin) {
                    authToken = data.data.token;
                    currentUser = data.data;
                    
                    localStorage.setItem('adminToken', authToken);
                    localStorage.setItem('currentUser', JSON.stringify(currentUser));
                    
                    document.getElementById('userName').textContent = currentUser.name;
                    document.getElementById('loginSection').classList.add('hidden');
                    document.getElementById('adminPanel').classList.remove('hidden');
                    
                    showStatus('loginStatus', 'Login realizado com sucesso!', 'success');
                    loadDashboardStats();
                } else {
                    showStatus('loginStatus', 'Credenciais invÃ¡lidas ou usuÃ¡rio nÃ£o Ã© administrador', 'error');
                }
            } catch (error) {
                showStatus('loginStatus', 'Erro ao conectar com o servidor', 'error');
            }
        });

        // Create raffle
        document.getElementById('createRaffleForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const title = document.getElementById('raffleTitle').value;
            const pricePerQuota = parseFloat(document.getElementById('pricePerQuota').value);
            const totalQuotas = parseInt(document.getElementById('totalQuotas').value);

            try {
                const response = await fetch(window.API_URL + '/api/admin/create-raffle', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${authToken}`
                    },
                    body: JSON.stringify({ title, pricePerQuota, totalQuotas })
                });

                const data = await response.json();

                if (data.success) {
                    showStatus('raffleStatus', 'Rifa criada com sucesso!', 'success');
                    document.getElementById('createRaffleForm').reset();
                    loadDashboardStats();
                } else {
                    showStatus('raffleStatus', data.message || 'Erro ao criar rifa', 'error');
                }
            } catch (error) {
                showStatus('raffleStatus', 'Erro ao conectar com o servidor', 'error');
            }
        });

        // Swap quota
        document.getElementById('swapQuotaForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const originUserId = document.getElementById('originUserId').value;
            const destinationUserId = document.getElementById('destinationUserId').value;
            const raffleId = document.getElementById('raffleId').value;
            const quotaNumber = document.getElementById('quotaNumber').value;

            try {
                const response = await fetch(window.API_URL + '/api/admin/swap-quota', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${authToken}`
                    },
                    body: JSON.stringify({ originUserId, destinationUserId, raffleId, quotaNumber })
                });

                const data = await response.json();

                if (data.success) {
                    showStatus('swapStatus', 'Cota transferida com sucesso!', 'success');
                    document.getElementById('swapQuotaForm').reset();
                } else {
                    showStatus('swapStatus', data.message || 'Erro ao transferir cota', 'error');
                }
            } catch (error) {
                showStatus('swapStatus', 'Erro ao conectar com o servidor', 'error');
            }
        });

        // Load dashboard stats
        async function loadDashboardStats() {
            try {
                // Mock data for now - replace with actual API calls
                document.getElementById('totalQuotas').textContent = '12,543';
                document.getElementById('totalUsers').textContent = '1,247';
                document.getElementById('activeRaffles').textContent = '3';
            } catch (error) {
                console.error('Error loading stats:', error);
            }
        }

        // Logout
        function logout() {
            authToken = null;
            currentUser = null;
            localStorage.removeItem('adminToken');
            localStorage.removeItem('currentUser');
            
            document.getElementById('loginSection').classList.remove('hidden');
            document.getElementById('adminPanel').classList.add('hidden');
            
            document.getElementById('email').value = '';
            document.getElementById('password').value = '';
        }

        // Check for existing session on page load
        window.onload = function() {
            const storedToken = localStorage.getItem('adminToken');
            const storedUser = localStorage.getItem('currentUser');
            
            if (storedToken && storedUser) {
                authToken = storedToken;
                currentUser = JSON.parse(storedUser);
                
                document.getElementById('userName').textContent = currentUser.name;
                document.getElementById('loginSection').classList.add('hidden');
                document.getElementById('adminPanel').classList.remove('hidden');
                
                loadDashboardStats();
            }
        };
    </script>
</body>
</html>
